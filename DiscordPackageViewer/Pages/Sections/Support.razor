@page "/support"
@inject PackageLoaderService Loader
@inject NavigationManager Nav
@inject ToastService Toast

<PageTitle>Support Tickets ‚Äî Discord Package Viewer</PageTitle>

<div class="content-header">üé´ Support Tickets</div>
<div class="content-body">
    @if (selectedTicket is not null)
    {
        <div style="margin-bottom: 16px;">
            <span style="cursor: pointer; color: var(--text-link); font-size: 0.875rem;" @onclick="() => selectedTicket = null">
                ‚Üê Back to ticket list
            </span>
        </div>

        <div class="card" style="margin-bottom: 16px;">
            <div style="font-size: 1.125rem; font-weight: 700;">@selectedTicket.Subject</div>
            <div class="text-muted" style="margin-top: 4px;">
                Ticket #@selectedTicket.TicketId ¬∑ @selectedTicket.Status ¬∑ @selectedTicket.CreatedAt
            </div>
        </div>

        <h3 class="section-title">Conversation (@selectedTicket.Comments.Count messages)</h3>
        <div class="card">
            @foreach (var comment in selectedTicket.Comments)
            {
                <div class="ticket-comment">
                    <div class="comment-author @(comment.Author == "User" ? "author-user" : "author-agent")">
                        @comment.Author
                    </div>
                    <div class="comment-body">@comment.Comment</div>
                    <div class="comment-date">@comment.CreatedAt</div>
                </div>
            }
        </div>
    }
    else if (Loader.Data is { } data && data.SupportTickets.Any())
    {
        <h3 class="section-title">Tickets (@data.SupportTickets.Count)</h3>
        <div class="card">
            <table class="data-table">
                <thead>
                    <tr>
                        <th>Ticket ID</th>
                        <th>Subject</th>
                        <th>Status</th>
                        <th>Created</th>
                        <th>Comments</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var kv in data.SupportTickets.OrderByDescending(t => t.Value.CreatedAt))
                    {
                        var ticket = kv.Value;
                        <tr style="cursor: pointer;" @onclick="() => selectedTicket = ticket">
                            <td>@ticket.TicketId</td>
                            <td>@ticket.Subject</td>
                            <td>
                                <span class="chip @(ticket.Status == "deleted" ? "chip-danger" : ticket.Status == "closed" ? "" : "chip-positive")">
                                    @ticket.Status
                                </span>
                            </td>
                            <td class="text-muted">@ticket.CreatedAt</td>
                            <td>@ticket.Comments.Count</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else if (Loader.IsLoaded)
    {
        <p class="text-muted">No support tickets found in the package.</p>
    }
</div>

@code {
    private SupportTicket? selectedTicket;

    protected override void OnInitialized()
    {
        if (!Loader.IsLoaded)
        {
            Toast.Show("Please load a package first.", ToastLevel.Warning);
            Nav.NavigateTo("/");
        }
    }
}
